{
  "name": "mind_ease_mobile",
  "version": "1.0.0",
  "scripts": {
    "android": "expo run:android",
    "ios": "expo run:ios",
    "start": "expo start",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "build:web": "expo build:web",
    "prebuild": "expo prebuild",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "build:apk": "sh ./scripts/build-apk.sh",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-google-signin/google-signin": "^14.0.0",
    "@react-native-picker/picker": "^2.11.4",
    "@react-navigation/drawer": "^7.7.13",
    "expo": "^54.0.0",
    "expo-image": "~3.0.11",
    "expo-router": "^6.0.21",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "^6.0.9",
    "firebase": "^12.8.0",
    "lucide-react-native": "^0.563.0",
    "nativewind": "latest",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.71.1",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "^2.30.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-worklets": "0.5.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "babel-preset-expo": "^54.0.10",
    "eslint": "^9.25.1",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.2",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.17",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "react-test-renderer": "19.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.9.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "jest": {
    "preset": "jest-expo",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|nativewind)"
    ]
  },
  "main": "expo-router/entry",
  "private": true
}
